---
import { Icon } from "astro-icon";
---

<div class="relative mx-auto max-w-7xl py-16 md:px-6 bg-primary-black" id="contact">
  <div class="bg-black p-20 sm:rounded-3xl">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
        <div
          class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16"
        >
        <div class="pt-24">
          <h2 class="font-medium text-4xl text-white">Let's work together</h2>
          <p class="text-2xl leading-relaxed text-slate-500 mt-3">
            We are excited to hear from you
          </p>
          <div class="mt-5">
            <div>Zach Price</div>
            <div class="flex items-center mt-2 space-x-2 text-lg text-gray-500">
              <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
                href="mailto:zach@kyseniorhealth.com">zach@kyseniorhealth.com</a
              >
            </div><div class="flex items-center mt-2 space-x-2 text-lg  text-gray-500">
              <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
                href="tel:+1 (502) 632-3857">(502) 632-3857</a
              >
            </div>
          </div>
          </div>
          <div>
            <!-- Calendly inline widget begin -->
            <div
              class="calendly-inline-widget"
              data-url="https://calendly.com/morrow-austin/30min"
              style="min-width:320px;height:700px;"
            >
            </div>
            <script
              type="text/javascript"
              src="https://assets.calendly.com/assets/external/widget.js"
              async></script>
            <!-- Calendly inline widget end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
