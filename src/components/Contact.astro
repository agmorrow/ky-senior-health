---
import { Icon } from "astro-icon";
---

<div
  class="relative mx-auto max-w-full py-8 sm:py-16 bg-primary-black"
  id="contact"
>
  <div
    class="bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-600 via-blue-600 to-sky-300 p-8 sm:pb-20"
  >
    <div class="mx-auto max-w-7xl pb-8 px-6 lg:px-8">
      <div class="mx-auto mt-8 sm:mt-16 lg:mt-24 lg:max-w-4xl">
        <div
          class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16"
        >
          <div class="pt-8 sm:pt-24">
            <h2 class="font-medium text-5xl text-white">Let's work together</h2>
            <p
              class="text-3xl leading-relaxedmt-6 tracking-tight text-blue-100 mt-3"
            >
              We are excited to hear from you
            </p>
            <div class="mt-5">
              <div class="text-2xl text-white">Zach Price</div>
              <div
                class="flex items-center mt-2 space-x-2 text-xl text-blue-100"
              >
                <Icon class="text-white w-5 h-5" name="uil:envelope" /><a
                  href="mailto:zach@kyseniorhealth.com"
                  >zach@kyseniorhealth.com</a
                >
              </div>
              <div
                class="flex items-center mt-2 space-x-2 text-xl text-blue-100"
              >
                <Icon class="text-white w-5 h-5" name="uil:phone" /><a
                  href="tel:+1 (502) 632-3857">(502) 632-3857</a
                >
              </div>
            </div>
          </div>
          <div class="flex items-center justify-center sm:pt-8">
            <!-- Added these classes -->

            <!-- Calendly inline widget begin -->
            <div
              class="calendly-inline-widget"
              data-url="https://calendly.com/kyseniorhealth"
              style="width: 100%; min-width: 320px; max-width: 800px; height: 700px;"
            >
            </div>
            <script
              type="text/javascript"
              src="https://assets.calendly.com/assets/external/widget.js"
              async></script>
            <!-- Calendly inline widget end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
